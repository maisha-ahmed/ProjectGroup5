<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="NYMag Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="true"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="Windows"/>
    <parameter name="os_version" value="10"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="79"/>
    <parameter name="url" value="https://www.nymag.com/"/>

    <test name = "NYMag Home">
        <classes>
            <class name="tests.HomepageTest"/>
            <class name="tests.HomepageTest2"/>
            <class name="tests.SignUpTest"/>
            <class name="tests.DropDownMenuTest"/>
            <class name="tests.NYMagTest5"/>
            <class name="tests.NYMagTest6"/>
            <class name="tests.NYMagTest7"/>
            <class name="tests.NYMagTest8"/>
            <class name="tests.NYMagTest9"/>
            <class name="tests.NYMagTest10"/>
        </classes>
    </test>
</suite>